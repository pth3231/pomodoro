{
  "name": "pomodoro",
  "description": "A time manager helps users improve productivity and delays procastination.",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./public/css/index.css -o ./public/css/output.css",
    "build:server": "npx tsc && npx tsc-alias",
    "dev": "npx nodemon -r tsconfig-paths/register --exec \"npm run build:css && tsx ./src/server.ts\"",
    "start:pm2": "npm run build:css && npm run build:server && npx pm2 start",
    "start:docker": "npm run build:css && npm run build:server && node dist/src/server.js",
    "delete:all": "npx pm2 stop all && npx pm2 delete all",
    "lint": "eslint ./src/**/*.ts --fix",
    "format": "prettier --write ./**/*.{ts,json}",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false --testPathPattern=src/__tests__ --testPathIgnorePatterns=dist"
  },
  "keywords": [],
  "author": "Haven",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "jest": "29.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "pm2": "^6.0.8",
    "tailwindcss": "^4.1.11",
    "tsc-alias": "1.8.15",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3",
    "typescript-transform-paths": "3.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/jest": "29.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "20.14.8",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.6",
    "nodemon": "3.1.9",
    "prettier": "3.5.3",
    "ts-jest": "29.3.1",
    "tsx": "^4.20.3"
  }
}
